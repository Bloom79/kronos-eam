# Application
APP_NAME=Kronos EAM Backend
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production
SECRET_KEY=your-secret-key-change-this
API_V1_STR=/api/v1

# Database
DATABASE_URL=postgresql://kronos:password@localhost/kronos_eam
REDIS_URL=redis://localhost:6379/0

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
BCRYPT_ROUNDS=12

# Multi-tenant
ENABLE_MULTI_TENANT=True
DEFAULT_TENANT_ID=demo
MAX_USERS_PER_TENANT=100

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# AI Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-1.5-flash
ANTHROPIC_API_KEY=your-anthropic-api-key

# Voice Services
GOOGLE_CLOUD_PROJECT=your-gcp-project
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
VECTOR_DB_COLLECTION=kronos_documents

# RPA Configuration
RPA_PROXY_PORT=8888
PLAYWRIGHT_BROWSERS_PATH=/tmp/playwright-browsers
RPA_SCREENSHOT_PATH=/tmp/rpa-screenshots

# Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External Services
GSE_API_URL=https://areaclienti.gse.it
TERNA_API_URL=https://myterna.terna.it
DOGANE_API_URL=https://telematici.adm.gov.it

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload
MAX_UPLOAD_SIZE=52428800  # 50MB
ALLOWED_EXTENSIONS=["pdf", "doc", "docx", "xls", "xlsx", "png", "jpg", "jpeg"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json